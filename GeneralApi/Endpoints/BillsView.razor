@if (Bills is { Count: > 0 })
{
    <div class="bills-container">
        @foreach (var bill in Bills)
        {
            <div class="bill">
                <h2>@bill.Title</h2>
                <p>Due Date: @bill.DueDate</p>
                <p>Amount: @bill.AmountDue</p>
            </div>
        }
    </div>
}

<style>
    .bills-container {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    .bill {
        border: 1px solid #ddd;
        padding: 10px;
        margin-bottom: 10px;
    }
</style>
